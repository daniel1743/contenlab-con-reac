{
  "version": 2,
  "name": "creovision",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "env": {
    "VITE_SUPABASE_URL": "@vite_supabase_url",
    "VITE_SUPABASE_ANON_KEY": "@vite_supabase_anon_key",
    "VITE_GEMINI_API_KEY": "@vite_gemini_api_key",
    "VITE_OPENAI_API_KEY": "@vite_openai_api_key",
    "VITE_DEEPSEEK_API_KEY": "@vite_deepseek_api_key",
    "VITE_NEWS_API_KEY": "@vite_news_api_key",
    "VITE_TWITTER_BEARER_TOKEN": "@vite_twitter_bearer_token",
    "VITE_YOUTUBE_API_KEY": "@vite_youtube_api_key",
    "VITE_MERCADOPAGO_PUBLIC_KEY": "@vite_mercadopago_public_key",
    "VITE_MERCADOPAGO_ACCESS_TOKEN": "@vite_mercadopago_access_token"
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
